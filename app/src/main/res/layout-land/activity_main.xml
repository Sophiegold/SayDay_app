

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app3">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        android:translationX="8dp"
        tools:ignore="MissingConstraints" />

    <!-- Date Button -->
    <ImageView
        android:id="@+id/tapeLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        android:scaleType="fitCenter"
        android:src="@drawable/taia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recordingsScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495"
        app:layout_constraintWidth_percent="0.60" />

    <TextView
        android:id="@+id/dateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/pick_a_day"
        android:textColor="@color/highlight_text_color"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:rotation="4"
        android:lines="3"
        android:minLines="3"
        android:maxLines="3"
        android:fontFamily="@font/permanent_marker"
        android:textSize="16sp"
        app:layout_constraintWidth_percent="0.17"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/dayTitle"
        app:layout_constraintBottom_toBottomOf="@id/tapeLogo"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintVertical_bias="0.23"/>

    <!-- Day Title EditText -->
    <EditText
        android:id="@+id/dayTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:translationY="40dp"
        android:autofillHints="name"
        android:drawableEnd="@drawable/ic_pencil"
        android:drawablePadding="4dp"
        android:fontFamily="@font/playpen_medium"
        android:gravity="top|start"
        android:textColorHint="#A07C11"
        android:hint="@string/my_day"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:maxWidth="200dp"
        android:padding="8dp"
        android:scrollHorizontally="false"
        android:ellipsize="none"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/dateButton"
        app:layout_constraintTop_toTopOf="@id/dateButton"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintWidth_percent="0.30" />


    <!-- Record Button -->
    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rec_button"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/start_recording"
        android:enabled="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintDimensionRatio="1:1"

        app:tint="@android:color/white" />

    <!-- Recording Status Text (NEW) -->
    <TextView
        android:id="@+id/recordingStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="13sp"
        android:fontFamily="@font/permanent_marker"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="@id/recordButton"
        app:layout_constraintEnd_toEndOf="@id/recordButton" />


    <!-- Edit btn -->
    <ImageView
        android:id="@+id/brushIcon"
        android:translationY="-28dp"
        android:translationX="-5dp"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:contentDescription="@string/edit_view"
        android:src="@drawable/des_button"
        app:layout_constraintBottom_toBottomOf="@+id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/dateButton" />






    <!-- Recordings list -->
    <ScrollView
        android:id="@+id/recordingsScroll"
        android:contentDescription="@string/recordings_list"
        android:background="@drawable/notepaper"
        android:padding="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35">


        <LinearLayout
            android:id="@+id/recordingsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>

    </ScrollView>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:contentDescription="@string/logo_small"
        android:src="@drawable/sayday_logo"
        app:layout_constraintStart_toEndOf="@id/dateButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-10dp"
        app:layout_constraintWidth_percent="0.30"/>

    <!-- Calendar Container -->

    <LinearLayout
        android:id="@+id/calendarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/materialCalendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>