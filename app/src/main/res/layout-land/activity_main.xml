<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:fitsSystemWindows="true">

    <!-- TOP APP BAR / TOOLBAR AT THE VERY TOP -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="SayDay"
        app:navigationIcon="@drawable/ic_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_launcher_background"
        android:translationX="8dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/bg_stripes"
        tools:ignore="MissingConstraints" />

    <!-- Tape Logo -->
    <ImageView
        android:id="@+id/tapeLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        android:scaleType="fitCenter"
        android:src="@drawable/taia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recordingsScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintWidth_percent="0.53" />

    <!-- Date Button -->
    <TextView
        android:id="@+id/dateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/pick_a_day"
        android:textColor="@color/highlight_text_color"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:rotation="4"
        android:lines="3"
        android:minLines="3"
        android:maxLines="3"
        android:fontFamily="@font/playpen_medium"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/dayTitle"
        app:layout_constraintHorizontal_bias="0.06" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/pick_a_day"
        android:background="@color/black"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/dateButton"
        app:layout_constraintStart_toStartOf="@id/dateButton"
        app:layout_constraintEnd_toEndOf="@id/dateButton"
        android:translationY="22dp"
        android:translationX="5dp"
        android:rotation="4"/>

    <!-- Day Title EditText -->
    <EditText
        android:id="@+id/dayTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="#62E0CDA4"
        android:translationY="43dp"
        android:autofillHints="name"
        android:maxLength="23"
        android:drawableEnd="@drawable/ic_pencil"
        android:drawablePadding="4dp"
        android:fontFamily="@font/playpen_medium"
        android:gravity="top|start"
        android:hint="@string/my_day"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:maxWidth="210dp"
        android:padding="8dp"
        android:scrollHorizontally="false"
        android:ellipsize="none"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/dateButton"
        app:layout_constraintTop_toTopOf="@id/dateButton"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintWidth_percent="0.30" />




    <!-- Record Button -->


    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rec_button"
        android:layout_marginBottom="3dp"
        android:contentDescription="@string/start_recording"
        android:enabled="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintWidth_percent="0.119"
        app:layout_constraintDimensionRatio="1:1"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/recordButton_lbl"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:padding="5dp"
        android:text="@string/RECORD"
        android:background="@color/black"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="@id/recordButton"
        app:layout_constraintEnd_toEndOf="@id/recordButton"
        android:translationY="10dp"/>

    <!-- Recording Status Text -->
    <TextView
        android:id="@+id/recordingStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/playpen_medium"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="@id/recordButton"
        app:layout_constraintEnd_toEndOf="@id/recordButton" />

    <!-- Edit btn -->
    <ImageView
        android:id="@+id/brushIcon"
        android:padding="2dp"
        android:translationY="-22dp"
        android:translationX="5dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:contentDescription="@string/edit_view"
        android:src="@drawable/des_button"
        app:layout_constraintBottom_toBottomOf="@+id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/dateButton" />

    <!-- Birthday Cake Icon (selectable) -->
    <ImageView
        android:id="@+id/check_Bday"
        android:translationY="-22dp"
        android:translationX="10dp"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_cake_l"
        android:contentDescription="@string/birthday"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/brushIcon"
        app:layout_constraintStart_toEndOf="@id/brushIcon"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"/>

    <!-- Recordings list -->
    <ScrollView
        android:id="@+id/recordingsScroll"
        android:contentDescription="@string/recordings_list"
        android:background="@drawable/notepaper"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/recordButton"
        app:layout_constraintStart_toEndOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.42"
        app:layout_constraintHeight_percent="0.40">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recordingsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topAppBar">

            <!-- Recordings container (vertical) -->
            <LinearLayout
                android:id="@+id/recordingsList"
                android:fillViewport="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/permanent_marker"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:fadingEdge="none"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/myImage"
        android:layout_width="320dp"
        android:layout_height="275dp"
        android:visibility="gone"
        android:translationX="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/recordingsScroll"
        app:layout_constraintTop_toTopOf="@id/recordButton"
        >

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/frameOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_frame"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="12dp"
            android:clickable="false"
            android:focusable="false"/>

        <ImageButton
            android:id="@+id/minusIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_remove"
            android:layout_gravity="top|end"
            android:visibility="visible"
            android:contentDescription="@string/delete_image"
            android:elevation="6dp"
            android:padding="8dp"
            />
    </FrameLayout>

    <!-- + Button for adding image, right corner above recordings list -->
    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:translationX="5dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/add_image"
        android:src="@drawable/ic_add_img"
        app:layout_constraintBottom_toBottomOf="@id/myImage"
        app:layout_constraintStart_toStartOf="@id/recordingsScroll" />



    <!-- Calendar Container with close button -->
    <LinearLayout
        android:id="@+id/calendarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top bar with space and close button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/calendarClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/close_calendar"
                android:padding="8dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/highlight_text_color" />
        </LinearLayout>

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/materialCalendarView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/myImage"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="0dp"/>
    </LinearLayout>

    <include layout="@layout/layout_howto_overlay" />
</androidx.constraintlayout.widget.ConstraintLayout>