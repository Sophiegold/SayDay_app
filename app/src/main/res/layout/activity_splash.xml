<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg">

    <!-- Main Logo -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_logo"
        android:scaleType="centerInside"
        android:src="@drawable/intro_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- App Name Text over the Image -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_your_day"
        android:layout_marginTop="-117dp"
        android:layout_marginStart="80dp"
        android:textSize="38sp"
        android:textColor="@color/splash_background"
        android:fontFamily="@font/playpen_medium"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/splashLogo"
        app:layout_constraintBottom_toBottomOf="@id/splashLogo"
        app:layout_constraintStart_toStartOf="@id/splashLogo"
        app:layout_constraintEnd_toEndOf="@id/splashLogo"
        android:gravity="center"/>

    <!-- Tagline Text over the Image -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_your_day_tagline"
        android:textSize="17sp"
        android:textColor="@color/splash_subtitle_color"
        android:fontFamily="@font/playpen"
        android:alpha="0.8"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/appNameText"
        app:layout_constraintStart_toStartOf="@id/appNameText"
        app:layout_constraintEnd_toEndOf="@id/appNameText"/>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminateTint="@color/splash_accent_color"
        style="?android:attr/progressBarStyle"
        app:layout_constraintTop_toBottomOf="@id/taglineText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textColor="@color/splash_accent_color"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/loadingProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Logo View -->
    <ImageView
        android:id="@+id/logoView"
        android:layout_width="679dp"
        android:layout_height="158dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadingProgressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
