<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:padding="8dp">

    <!-- Tape logo -->
    <ImageView
        android:id="@+id/tapeLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo"
        android:scaleType="fitCenter"
        android:src="@drawable/my_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date button over the tape -->
    <TextView
        android:id="@+id/dateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ellipsize="none"
        android:focusable="true"
        android:fontFamily="@font/permanent_marker"
        android:gravity="center"
        android:lines="3"
        android:maxLines="3"
        android:minLines="3"
        android:padding="8dp"
        android:rotation="4"
        android:singleLine="false"
        android:text="@string/pick_a_day"
        android:textColor="@color/highlight_text_color"
        app:layout_constraintBottom_toBottomOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/tapeLogo"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintTop_toTopOf="@id/tapeLogo"
        app:layout_constraintVertical_bias="0.24"
        app:layout_constraintWidth_percent="0.20" />

    <!-- Day Title EditText with pencil -->
    <EditText
        android:id="@+id/dayTitle"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:autofillHints="name"
        android:drawableEnd="@drawable/ic_pencil"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/permanent_marker"
        android:gravity="center_vertical"
        android:hint="@string/my_day"
        android:inputType="textCapSentences"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:padding="6dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dateButton"
        app:layout_constraintStart_toStartOf="@+id/dateButton"
        app:layout_constraintTop_toTopOf="@id/dateButton"
        app:layout_constraintWidth_percent="0.50" />

    <!-- Record Button -->
    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/rec_button"
        android:contentDescription="@string/start_recording"
        android:enabled="false"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@id/tapeLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dayTitle"
        app:tint="@android:color/white" />

    <!-- Recording Status Text (NEW) -->
    <TextView
        android:id="@+id/recordingStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/permanent_marker"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recordings list below (portrait) -->
    <ScrollView
        android:id="@+id/recordingsScroll"
        android:background="@drawable/recs_paper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/tapeLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.60">

        <LinearLayout
            android:id="@+id/recordingsList"
            android:fontFamily="@font/permanent_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"/>
    </ScrollView>

    <!-- Calendar Picker Container with MaterialCalendarView -->
    <LinearLayout
        android:id="@+id/calendarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/dateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/materialCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>