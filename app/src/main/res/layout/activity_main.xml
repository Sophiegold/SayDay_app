<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:padding="16dp">

    <!-- Tape image -->
    <ImageView
        android:id="@+id/tapeLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/my_logo"
        android:contentDescription="@string/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Date button OVER the tape -->
    <TextView
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_a_day"
        android:textColor="@color/highlight_text_color"
        android:background="@drawable/highlight_button"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"

        app:layout_constraintTop_toTopOf="@id/tapeLogo"
        app:layout_constraintStart_toStartOf="@id/tapeLogo"
        app:layout_constraintEnd_toEndOf="@id/tapeLogo"
        app:layout_constraintBottom_toBottomOf="@id/tapeLogo"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.29"/>


    <!-- biases = % position inside the tapeLogo bounds -->
    <!-- adjust 0.15 (X) and 0.25 (Y) until button fits perfectly into the calendar spot -->

    <!-- Record button below -->

    <!-- Recordings list below -->
    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/bg_circle_button_selector"
        android:contentDescription="@string/start_recording"
        android:enabled="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.140"
        app:tint="@android:color/white" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recordButton"
        app:layout_constraintVertical_bias="0.180">

        <LinearLayout
            android:id="@+id/recordingsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
